        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
            <li class="nav-item active">
              <!-- <a class="nav-link" href="<%= root_path %>">Home</a> -->
            </li>
            <li class="nav-links-container">
              <a class="nav-link" href="/dogwalks/new">Create A Service</a>
              <a class="nav-link" href="/bookings">My Bookings</a>
              <a class="nav-link" href="/users/sign_in">Login/Sign-Up</a>
            </li>
      <!-- <li class="nav-item dropdown">
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
