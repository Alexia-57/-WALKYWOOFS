                <a class="dropdown-item" data-turbo-method="delete" href="#">Log out</a>
              </div>
            </li>  -->
            <!--li class="nav-item"-->
            <!--/li-->
        </ul>
      </div>
    </div>
  </div>

  <!-- BANNER -->
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('dogwalking.jpg') %> "> <!-- url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);-->
    <div class="container">
      <h1>WALKYWOOFS <i class="fa-solid fa-paw"></i></h1>
      <p>Exploring the World, One Paw at a Time</p>
      <!-- <a class="btn btn-flat" href="#">Apply now</a> -->
      <p><%= link_to "FETCH MORE WOOFYWALKS", dogwalks_path, class: "btn btn-ghost-banner mt-4" %></p>
    </div>
  </div>

  <!-- page contents -->

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

  <!-- FOOTER -->

  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
    </div>
    <div class="footer-copyright">
      Follow Walkywoofs! <i class="fa-solid fa-paw"></i>
    </div>
  </div>


  </body>
</html>
